{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "StorageAccountTableName": {
      "type": "String",
      "defaultValue": "devwelabappstorage"
    },
    "Application.Name": {
      "type": "String",
      "defaultValue": "dev-we-lab-app"
    },
    "Application.Environment": {
      "type": "String",
      "defaultValue": "dev"
    },
    "Application.Version": {
      "type": "String",
      "defaultValue": "1.0.0"
    },
    "Release.Name": {
      "type": "String",
      "defaultValue": "1.0.0-001"
    },
    "Release.RequestedFor": {
      "type": "String",
      "defaultValue": "Helena Coppieters"
    },
    "Release.SourceCodeBranch": {
      "type": "String",
      "defaultValue": "refs/heads/lab-devops"
    },
    "Release.TriggerType": {
      "type": "String",
      "defaultValue": "Manual"
    },
    "Release.Url": {
      "type": "String",
      "defaultValue" : "https://dev.azure.com/codit/Training/_build/results?buildId=xxxxx&view=results"
    },
    "AppSvcPlan.SkuName": {
      "defaultValue": "B1",
      "allowedValues": [
        "F1",
        "D1",
        "B1"
      ],
      "type": "String",
      "metadata": {
        "description": "Provide the pricing tier of the App Service Plan."
      }
    },
    "KeyvaultSecretWriter.TenantId": {
      "type": "String",
      "defaultValue": "7517bc42-bcf8-4916-a677-b5753051f846"
    },
    "KeyvaultSecretWriter.ObjectId": {
      "type": "String",
      "defaultValue": "0d876cc9-1767-4fc7-b562-1d3d31671c8f"
    },
    "Keyvault.SecretName": {
      "type": "String",
      "defaultValue": "EncryptionKey",
      "metadata": {
        "description": "Specifies the name of the secret that you want to create."
      }
    },
    "Keyvault.SecretValue": {
      "type": "SecureString",
      "metadata": {
        "description": "Value of the secret from Key Vault."
      }
    }
  },
    "variables": {
      "KeyVaultName": "[concat(parameters('Application.Name'), '-vault')]",
      "AppServicePlanName": "[concat(parameters('Application.Name'), 'Plan')]",
      "AppServiceName": "[parameters('Application.Name')]",
      "StorageAccountName": "[concat(tolower(replace(parameters('Application.Name'),'-','')), 'storage')]",
      "Tags": {
        "environment": "[parameters('Application.Environment')]",
        "version": "[parameters('Application.Version')]",
        "releaseName": "[parameters('Release.Name')]",
        "createdBy": "[parameters('Release.Url')]",
        "branch": "[parameters('Release.SourceCodeBranch')]",
        "triggeredBy": "[parameters('Release.RequestedFor')]",
        "triggerType": "[parameters('Release.TriggerType')]"
      }
    },
    "resources": [
      {
        "type": "Microsoft.Resources/tags",
        "apiVersion": "2019-10-01",
        "name": "default",
        "dependsOn": [],
        "properties": {
          "tags": "[variables('Tags')]"
        }
      },
      {
        "name": "[variables('StorageAccountName')]",
        "type": "Microsoft.Storage/storageAccounts",
        "apiVersion": "2021-09-01",
        "location": "[resourceGroup().location]",
        "kind": "StorageV2",
        "tags": "[variables('Tags')]",
        "sku": {
            "name": "Standard_LRS",
            "tier": "Standard"
        },
        "properties": {
             "minimumTlsVersion": "TLS1_2",
             "allowBlobPublicAccess": false,
             "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [],
                    "ipRules": [],
                    "defaultAction": "Allow"
                },
                "supportsHttpsTrafficOnly": true,
                                "encryption": {
                    "services": {
                        "file": {
                            "keyType": "Account",
                            "enabled": true
                        },
                        "blob": {
                            "keyType": "Account",
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                },
                "accessTier": "Hot"
          }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/tableServices",
            "apiVersion": "2021-09-01",
            "name": "[concat(variables('StorageAccountName'), '/default')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('StorageAccountName'))]"
            ],
            "properties": {
                "cors": {
                    "corsRules": []
                }
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/tableServices/tables",
            "apiVersion": "2021-09-01",
            "name": "[concat(variables('StorageAccountName'), '/default/', parameters('StorageAccountTableName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts/tableServices', variables('StorageAccountName'), 'default')]",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('StorageAccountName'))]"
            ],
            "properties": {}
        },
        {
            "name": "[variables('AppServicePlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2020-12-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "[parameters('AppSvcPlan.SkuName')]",
                "capacity": 1
            },
            "tags": "[variables('Tags')]",
            "properties": {
                "reserved": true
            }
       },
       {
        "type": "Microsoft.KeyVault/vaults",
        "apiVersion": "2018-02-14",
        "name": "[variables('KeyVaultName')]",
        "location": "[resourceGroup().location]",
        "tags": "[variables('Tags')]",
        "properties": {
          "tenantId": "[parameters('KeyvaultSecretWriter.TenantId')]",
          "sku": {
            "name": "Standard",
            "family": "A"
          },
          "networkAcls": {
            "defaultAction": "Allow",
            "bypass": "AzureServices"
          },
          "enabledForTemplateDeployment": true,
          "accessPolicies": [
            {
              "tenantId": "[parameters('KeyvaultSecretWriter.TenantId')]",
              "objectId": "[parameters('KeyvaultSecretWriter.ObjectId')]",
              "permissions": {
                "secrets": [
                  "get",
                  "set"
                ]
              }
            }
          ]
        }
      },
      {
        "type": "Microsoft.KeyVault/vaults/secrets",
        "apiVersion": "2018-02-14",
        "name": "[concat(variables('keyVaultName'), '/', parameters('Keyvault.SecretName'))]",
        "dependsOn": [
          "[resourceId('Microsoft.KeyVault/vaults', variables('KeyVaultName'))]"
        ],
        "tags": "[variables('Tags')]",
        "properties": {
          "value": "[parameters('Keyvault.SecretValue')]"
        }
      }
    ],
    "outputs": {}
  } 