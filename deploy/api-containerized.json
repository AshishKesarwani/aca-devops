{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ApplicationInsights.Name": {
            "type": "string"
        },
        "AppPlan.Capacity": {
            "type": "string"
        },
        "AppPlan.Autoscaling.Min": {
            "type": "string"
        },
        "AppPlan.Autoscaling.Max": {
            "type": "string"
        },
        "AppPlan.Name": {
            "type": "string"
        },
        "AppPlan.Size": {
            "type": "string"
        },
        "Container.ImageName": {
            "type": "string"
        },
        "Container.Tag": {
            "type": "string"
        },
        "ContainerRegistry.Auth.Key": {
            "type": "securestring"
        },
        "ContainerRegistry.Name": {
            "type": "string"
        },
        "ContainerRegistry.ResourceGroup.Name": {
            "type": "string"
        },
        "ServiceBus.Namespace.Name": {
            "type": "String"
        },
        "ServiceBus.Queue.Name": {
            "type": "String"
        },
        "WebApp.Name": {
            "type": "String"
        }
    },
    "variables": {
        "AppPlan.Autoscaling.Name": "[format('{0}-autoscaling-rules', parameters('AppPlan.Name'))]",
        "AppPlan.ResourceId": "[resourceId('Microsoft.Web/serverfarms', parameters('AppPlan.Name'))]",
        "ContainerRegistry.ResourceId": "[resourceId(parameters('ContainerRegistry.ResourceGroup.Name'), 'Microsoft.ContainerRegistry/registries', parameters('ContainerRegistry.Name'))]",
        "Image.Name": "[concat(parameters('ContainerRegistry.Name'), '.azurecr.io/', parameters('Container.ImageName'), ':', parameters('Container.Tag'))]",
        "Tags": {
            "App": "Codito Carwash",
            "Area": "Azure PaaS"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2019-08-01",
            "name": "[parameters('AppPlan.Name')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "[parameters('AppPlan.Size')]",
                "size": "[parameters('AppPlan.Size')]",
                "capacity": "[parameters('AppPlan.Capacity')]"
            },
            "kind": "linux",
            "properties": {
                "reserved": true
            },
            "tags": "[variables('Tags')]"
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2019-08-01",
            "name": "[parameters('WebApp.Name')]",
            "location": "[resourceGroup().location]",
            "kind": "app,linux,container",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "serverFarmId": "[variables('AppPlan.ResourceId')]",
                "reserved": true,
                "httpsOnly": true,
                "clientAffinityEnabled": false,
                "siteConfig": {
                    "alwaysOn": true,
                    "linuxFxVersion": "[concat('DOCKER|', variables('Image.Name'))]",
                    "appSettings": [
                        {
                            "name": "DOCKER_REGISTRY_SERVER_URL",
                            "value": "[concat('https://', parameters('ContainerRegistry.Name'), '.azurecr.io')]"
                        },
                        {
                            "name": "DOCKER_REGISTRY_SERVER_USERNAME",
                            "value": "[parameters('ContainerRegistry.Name')]"
                        },
                        {
                            "name": "DOCKER_REGISTRY_SERVER_PASSWORD",
                            "value": "[parameters('ContainerRegistry.Auth.Key')]"
                        },
                        {
                            "name": "CODITO_TELEMETRY_APPLICATIONINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference(resourceId('microsoft.insights/components/', parameters('ApplicationInsights.Name')), '2015-05-01').InstrumentationKey]"
                        },
                        {
                            "name": "CODITO_SERVICEBUS_CONNECTIONSTRING",
                            "value": "[listKeys(resourceId('Microsoft.ServiceBus/namespaces/authorizationRules', parameters('ServiceBus.Namespace.Name'), 'RootManageSharedAccessKey'), '2017-04-01').primaryConnectionString]"
                        },
                        {
                            "name": "CODITO_SERVICEBUS_CARWASH_QUEUENAME",
                            "value": "[parameters('ServiceBus.Queue.Name')]"
                        }
                    ]
                }
            },
            "dependsOn": [
                "[variables('AppPlan.ResourceId')]"
            ],
            "tags": "[variables('Tags')]"
        },
        {
            "type": "microsoft.insights/autoscalesettings",
            "apiVersion": "2015-04-01",
            "name": "[variables('AppPlan.Autoscaling.Name')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "profiles": [
                    {
                        "name": "App Plan Autoscaling",
                        "capacity": {
                            "minimum": "[parameters('AppPlan.Autoscaling.Min')]",
                            "maximum": "[parameters('AppPlan.Autoscaling.Max')]",
                            "default": "[parameters('AppPlan.Capacity')]"
                        },
                        "rules": [
                            {
                                "metricTrigger": {
                                    "metricName": "CpuPercentage",
                                    "metricNamespace": "microsoft.web/serverfarms",
                                    "metricResourceUri": "[variables('AppPlan.ResourceId')]",
                                    "timeGrain": "PT1M",
                                    "statistic": "Average",
                                    "timeWindow": "PT10M",
                                    "timeAggregation": "Average",
                                    "operator": "GreaterThanOrEqual",
                                    "threshold": 75,
                                    "dimensions": [],
                                    "dividePerInstance": false
                                },
                                "scaleAction": {
                                    "direction": "Increase",
                                    "type": "ChangeCount",
                                    "value": "1",
                                    "cooldown": "PT5M"
                                }
                            },
                            {
                                "metricTrigger": {
                                    "metricName": "MemoryPercentage",
                                    "metricNamespace": "microsoft.web/serverfarms",
                                    "metricResourceUri": "[variables('AppPlan.ResourceId')]",
                                    "timeGrain": "PT1M",
                                    "statistic": "Average",
                                    "timeWindow": "PT10M",
                                    "timeAggregation": "Average",
                                    "operator": "GreaterThanOrEqual",
                                    "threshold": 75,
                                    "dimensions": [],
                                    "dividePerInstance": false
                                },
                                "scaleAction": {
                                    "direction": "Increase",
                                    "type": "ChangeCount",
                                    "value": "1",
                                    "cooldown": "PT5M"
                                }
                            },
                            {
                                "metricTrigger": {
                                    "metricName": "CpuPercentage",
                                    "metricNamespace": "microsoft.web/serverfarms",
                                    "metricResourceUri": "[variables('AppPlan.ResourceId')]",
                                    "timeGrain": "PT1M",
                                    "statistic": "Average",
                                    "timeWindow": "PT10M",
                                    "timeAggregation": "Average",
                                    "operator": "LessThanOrEqual",
                                    "threshold": 40,
                                    "dimensions": [],
                                    "dividePerInstance": false
                                },
                                "scaleAction": {
                                    "direction": "Decrease",
                                    "type": "ChangeCount",
                                    "value": "1",
                                    "cooldown": "PT5M"
                                }
                            },
                            {
                                "metricTrigger": {
                                    "metricName": "MemoryPercentage",
                                    "metricNamespace": "microsoft.web/serverfarms",
                                    "metricResourceUri": "[variables('AppPlan.ResourceId')]",
                                    "timeGrain": "PT1M",
                                    "statistic": "Average",
                                    "timeWindow": "PT10M",
                                    "timeAggregation": "Average",
                                    "operator": "LessThanOrEqual",
                                    "threshold": 40,
                                    "dimensions": [],
                                    "dividePerInstance": false
                                },
                                "scaleAction": {
                                    "direction": "Decrease",
                                    "type": "ChangeCount",
                                    "value": "1",
                                    "cooldown": "PT5M"
                                }
                            }
                        ]
                    }
                ],
                "enabled": true,
                "name": "[variables('AppPlan.Autoscaling.Name')]",
                "targetResourceUri": "[variables('AppPlan.ResourceId')]",
                "notifications": []
            },
            "dependsOn": [
                "[variables('AppPlan.ResourceId')]"
            ],
            "tags": "[variables('Tags')]"
        }
    ],
    "outputs": {
        "acrcredentials": {
            "type": "object",
            "value": "[listCredentials(variables('ContainerRegistry.ResourceId'), '2019-05-01')]"
        }
    }
}
